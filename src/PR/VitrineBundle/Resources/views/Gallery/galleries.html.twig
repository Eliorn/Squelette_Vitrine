{% extends "PRVitrineBundle::layout.html.twig" %}

{% block title %}Galeries{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block pr_vitrine_body %}
    <h1>Galeries </h1>
    <p class="important">
      <div class="row">


          {% for galleries in listGalleries|batch(3) %}
            {% for gallery in galleries %}
            <div class="col-lg-4"  style='float:left; text-align:left;'>
              <span style='text-align:center;text-transform:uppercase;'>{{gallery.Title}}</span><br/>
              <a href="{{ path('gallery_show', {'gallery': gallery.directory}) }}" data-slide-to="0"><img class="img-thumbnail" src="{{asset("data/galleries/"~ gallery.directory ~"/first.jpg")}}" alt="{{gallery.caption}}"> </a> <br>
                <caption>{{gallery.description}}</caption>
            </div>
            {% endfor %}
            <div class="separator" style='float:left;width:100%; margin-bottom:25px; border-bottom:1px thin #888888;'> &nbsp;</div>
          {% endfor %}

      </div>
    </p>
{% endblock %}
