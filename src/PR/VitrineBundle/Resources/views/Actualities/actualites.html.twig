{% extends "PRVitrineBundle::layout.html.twig" %}

{% block title %}Actualités{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block pr_vitrine_body %}
<script src="{{asset('AdminLTE/bower_components/jquery/dist/jquery.min.js')}}"></script>
<h2> Actu du moment  </h2><br/>
<div class="row">

<div class="col-lg-12">

  {% for article in listArticles %}
    <div class="col-lg-2"  style='float:left; text-align:left;'>
       Posté par : {{article.editor}} <br/> <br/>
       Posté le : {{article.date|date('d-m-Y H:i:s') }}
    </div>
    <div class="col-lg-10" style='float:left; border-left:1px solid #888888;text-align:left;'>
      <span style='text-transform:uppercase; font-size:14px;'>{{article.Title}}</span>
      <div class="separator" style='margin-bottom:5px;' > &nbsp;</div>
      <span>{{article.content|raw}}</span>
    </div>

    <div class="separator" style='margin-bottom:25px; border-bottom:1px solid #888888;'> &nbsp;</div>
  {% endfor %}
</div>

</div>
{% endblock %}
