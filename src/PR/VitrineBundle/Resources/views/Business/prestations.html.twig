{% extends "PRVitrineBundle::layout.html.twig" %}

{% block title %}Prestations{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block pr_vitrine_body %}
<script src="{{asset('AdminLTE/bower_components/jquery/dist/jquery.min.js')}}"></script>
<h2> Prestations  </h2><br/>
<div class="row">

<div class="col-lg-12">
       {% if listPrestations is not empty %}
        {% for prestation in listPrestations %}
          <div class="col-lg-2"  style='float:left; text-align:left;'>
             Type de prestation : {{prestation.type}} <br/> <br/>
             Prix : {{prestation.price}} â‚¬
          </div>
          <div class="col-lg-10" style='float:left; border-left:1px solid #888888;text-align:left;'>
            <span style='text-transform:uppercase; font-size:14px;'>{{prestation.Title}}</span>
            <div class="separator" style='margin-bottom:5px;' > &nbsp;</div>
            <span>{{prestation.Description|raw}}</span>
          </div>

          <div class="separator" style='margin-bottom:25px; border-bottom:1px solid #888888;'> &nbsp;</div>
        {% endfor %}
       {% else %}
       <div class="col-lg-12">
        Rien de disponible pour le moment !<br/>
        Revenez plus tard !
       </div>
       {% endif %}
</div>

</div>
{% endblock %}
