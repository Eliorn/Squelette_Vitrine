{% extends "PRAdminBundle::layout.html.twig" %}

{% block title %}Administration{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block menu %}
    {{ render(controller('PRAdminBundle:MenuAdmin:list'))}}
{% endblock %}
{% block pr_vitrine_body %}
    <h2> Gestion des contacts </h2>
    <caption><span><input type='button' value="Nouveau" class='btn btn-success'/><span></caption>
    <table id='tableContact' name='tableContact' class='table table-striped table-bordered table-hover no-foooter dataTable' role="grid">
      <thead>
          <th> Mail </th>
          <th> Type de contact ( list√© dans le select de la page contact) </th>
          <th> Actions </th>
      </thead>
      <tbody>

          {% for contact in listContacts %}
          <tr>
              <td>{{contact.email}}</td>
              <td>{{contact.type}}</td>
              <td>
                  <input type='button' value="Editer" class='btn btn-warning'/>
                  <input type='button' value="Supprimer" class='btn btn-danger'/>
              </td>
          </tr>
          {% endfor %}
      </tbody>
    </table>
{% endblock %}
