    <table id='tableArticles' name='tableArticles' class='table table-striped table-bordered table-hover no-foooter dataTable' role="grid">
      <thead>
        <th>Contenu</th>
        <th>Action</th>
      </thead>
      <tbody>


          <tr>

            <td>
                {{form_start(form)}}
                  {{ form_widget(form)}}

