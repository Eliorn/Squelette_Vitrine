{% block title %}Administration{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block menu %}
    {{ render(controller('PRAdminBundle:MenuAdmin:list'))}}
{% endblock %}
{% block pr_vitrine_body %}
