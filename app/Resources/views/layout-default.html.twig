<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Site Vitrine {% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }} ">

</head>
<body>
<div class="container-fluid">
    <div id="header" class="jumbotron">
        <h1>Site Vitrine</h1>
        <p>
          Page d'accueil
        </p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p style="text-align:right;">
              Hello
            </p>
        </div>

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div></p>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div id="menu" class="col-md-3">
            <h3>Menu Principal</h3>
            <ul class="nav flex-column ">
                <li><a class="nav-item" href="{{ path('accueil') }}"><i class="fas fa-home" aria-hidden="true"></i> Accueil </a></li>
                <li><a class="nav-item" href="{{ path('presentation') }}"><i class="fas fa-binoculars" aria-hidden="true"></i> Pr√©sentation </a></li>
                <li><a class="nav-item" href="{{ path('gallerie') }}"><i class="fas fa-cog" aria-hidden="true"></i> Gallerie </a></li>
                <li><a class="nav-item" href="{{ path('contacts') }}"><i class="fas fa-cog" aria-hidden="true"></i> Contacts </a></li>
            </ul>
        </div>
        <div id="content" class="col-md-9">
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <hr>

    <footer>
        <p style="text-align:center;">Copyright {{ "now"|date('Y') }} - Pierre Roumieux</p>
    </footer>
</div>

{% block javascripts %}
<script src="{{ asset('css/FontAwesome/svg-with-js/js/fontawesome-all.min.js') }}"></script>
<script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
<script src="{{ asset('js/popper.js') }}"></script>
<script src="{{ asset('js/bootstrap.min.js') }}"></script>

{% endblock %}
</body>
</html>
